

<h1 class="no-top-margin text-center">Welcome to your dashboard <%= current_user.first_name %> <%= current_user.last_name %></h1>
<br>


<div class="container">
  <h2>My boats</h2>
  <div class="row">
    <div class="col-sm-12">
      <% if current_user.boats.blank? %>
      <h3>You have no boat <%= link_to "Add a boat", new_boat_path, class: "navbar-wagon-item navbar-fishing-buddy-button btn" %> </h3>
      <% else %>
      <% current_user.boats.each do |boat| %>
        <div class="col-xs-12 col-md-4">
        <%= render 'boats/boat_card', boat: boat %>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>



<div class="container">
  <div class="row">
    <div class="booking-content">
      <div class="col-sm-12">

        <div id="boat_bookings">
          <%= render "users/boats_booking", boats: @boats, requests_on_my_boats: @requests_on_my_boats %>
        </div>

      </div>
    </div>
  </div>
</div>





<div class="container">
  <div class="row">
    <div class="booking-content">
      <div class="col-sm-12">
      <h2>Your bookings</h2>
         <% if current_user.bookings.blank? %>
         <h3>You have no booking <%= link_to "Book a boat", root_path, class: "navbar-wagon-item navbar-fishing-buddy-button btn" %> </h3>
         <% else %>
          <table class="table text-left">
                <thead>
                  <tr>
                    <th><strong>Boat</strong></th>
                    <th>Date</th>
                    <th>Firstname</th>
                    <th>Booking status</th>
                  </tr>
                </thead>
                  <% current_user.bookings.each do |booking| %>
                <tbody>
                    <tr>
                      <td><%= booking.boat.name %></td>
                      <td><%= booking.starts_at.strftime('%B %e') %></td>
                      <td><%= booking.user.first_name %></td>
                      <td> ADD STATUS here</td>
                    </tr>
                  <% end %>
                </tbody>
              <% end %>
        </table>
      </div>
    </div>
  </div>
</div>


