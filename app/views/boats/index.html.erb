

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,1,3,0.2) 0%, rgba(123,2,1,0.2) 50%), url(<%= asset_path 'banner_photo.jpg' %>) ">
  <div class="banner-content">
    <h1>Au bord de l'eau</h1>
    <h2>Vivre notre passion, choisir de la protéger</h2>
    <div class="banner-form" id="search-form">
      <%= form_tag(boats_path, method: :get) do %>
        <%= text_field_tag :search, params[:search], placeholder: "Votre adresse"%>
        <%= submit_tag "Trouver les actions près de chez moi" , class: 'btn btn-treehouse' %>
      <% end %>
    </div>
  </div>
</div>

<div class="wrapper-grey">
  <div class="container">
    <h2 class="text-center" id="title"> Les actions près de chez moi </h2>
    <div id="boats">
      <%= render 'boats_list', boats: @boats %>
    </div>
  </div>
<br>
  <div class="container">
    <div id="map" style="width: 100%; height: 500px;">
      <% content_for(:after_js) do %>
      <script>
        $(document).ready(function() {
          var handler = Gmaps.build('Google');
          handler.buildMap({ provider: { scrollwheel: false, zoomControl: true }, internal: { id: 'map' } }, function() {
            // handler.addMarker({
            //   lat: <%= @search_lat %>,
            //   lng: <%= @search_lng %>,
            // })
            markers = handler.addMarkers(<%= raw @hash.to_json %>);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
            if (markers.length == 0) {
              handler.getMap().setZoom(2);
            } else if (markers.length == 1) {
              handler.getMap().setZoom(13);
            }
          });
        });
        </script>
      <% end %>
    </div>
  </div>

<br>

  <div class="container">
    <h2 class="text-center" id="title"> Au bord de l'eau en bref </h2>
   <div class="row">
    <div class="col-xs-12 col-md-4">
      <div class="card-text">
        <h3 class="text-center">Engager</h3>
      </div>
    </div>
     <div class="col-xs-12 col-md-4">
      <div class="card-text">
        <h3 class="text-center">Le projet</h3>
        <%= link_to '', le_projet_path, class: "card-link" %>
      </div>
    </div>
     <div class="col-xs-12 col-md-4">
       <div class="card-text">
        <h3 class="text-center">Nous rejoindre</h3>
        <%= link_to '', contact_path, class: "card-link" %>
      </div>
    </div>
   </div>
  </div>
</div>


