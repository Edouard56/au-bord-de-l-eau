      <div class="row">
        <div class="col-xs-12">
          <h4 class="text-center" id="title"> Exemple de module de recherche</h4>
          <div class="banner-form" id="search-form">
            <%= form_tag(boats_path, method: :get) do %>
              <%= text_field_tag :search, params[:search], placeholder: "Votre adresse"%>
              <%= submit_tag "Trouver les actions près de chez moi" , class: 'btn btn-treehouse' %>
            <% end %>
          </div>
          <br>
          <div id="boats">
            <%= render 'boats_list', boats: @boats %>
          </div>
          <br>
          <div id="map" style="width: 100%; height: 350px;">
            <% content_for(:after_js) do %>
            <script>
              $(document).ready(function() {
                var handler = Gmaps.build('Google');
                handler.buildMap({ provider: { scrollwheel: false, zoomControl: true }, internal: { id: 'map' } }, function() {
                  // handler.addMarker({
                  //   lat: <%= @search_lat %>,
                  //   lng: <%= @search_lng %>,
                  // })
                  markers = handler.addMarkers(<%= raw @hash.to_json %>);
                  handler.bounds.extendWith(markers);
                  handler.fitMapToBounds();
                  if (markers.length == 0) {
                    handler.getMap().setZoom(2);
                  } else if (markers.length == 1) {
                    handler.getMap().setZoom(13);
                  }
                });
              });
              </script>
            <% end %>
          </div>
        </div>
        </div>
      </div>
    </div>
