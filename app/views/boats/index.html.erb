
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,1,3,0.1) 0%, rgba(123,2,1,0.1) 50%), url(<%= asset_path 'scout.jpg' %>) ">
  <div class="banner-content">
    <h1>Fishing buddy</h1>
    <h3>You will never fish alone</h3>
    <%= link_to "Add a boat", new_boat_path, class: "btn btn-primary" %>
  </div>
</div>

</div>
<div class="text-center">
  <h1>All available boats</h1>
    <div class="container">
      <div class="row">
        <% @boats.each do |boat| %>
          <div class="col-xs-12 col-sm-4">
            <%= render 'boat_card', boat: boat %>
          </div>
        <% end %>
      </div>
    </div>
</div>

<div id="map" style="width: 100%; height: 600px;"></div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });
  <% end %>
<% end %>

