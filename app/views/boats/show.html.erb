


<div class="wrapper" id="wrapper-show">
  <% if @boat.photo? %>
    <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path @boat.photo.path %>');">
      <div class="banner-content">
        <h1><%= @boat.name %></h1>
      </div>
    </div>
  <% else %>
    <div class="banner" id="wrapper-show" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path("fishing_boat_fdoghg") %>')">
      <div class="banner-content">
        <h1><%= @boat.name %></h1>
      </div>
    </div>
  <% end %>
</div>

<div class="container" id="info-container">
  <div class="row">
    <div class="col-xs-12 col-md-4">
      <h3>L'organisateur de l'action</h3>
      <p><%= @boat.organizer %> </p>
    </div>
    <div class="col-xs-12 col-md-4 col-md-offset-4">
      <p id="" >Passengers : <%= @boat.objectives %> </p>
    </div>
  </div>
      <p> <strong><%= @boat.description %> </strong> </p>
</div>

<div class="container text-center">
  <div class="row">
    <div class="col-xs-12 col-sm-2 col-sm-offset-2 btn btn-treehouse">
      <%= link_to "s'inscrire", boat_path(@boat),
      method: :delete,
      data: { confirm: "Je confirme mon inscription !" } %>
    </div>
  </div>
</div>

<div class="container">
  <div id="map" style="width: 100%; height: 300px;"></div>
  <% content_for(:after_js) do %>
    <script type="text/javascript">
      $(document).ready(function() {
        var handler = Gmaps.build('Google');
        handler.buildMap({ internal: { id: 'map' } }, function() {
          markers = handler.addMarkers(<%= raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
          if (markers.length == 0) {
            handler.getMap().setZoom(2);
          } else if (markers.length == 1) {
            handler.getMap().setZoom(14);
          }
        });
      });
    </script>>
  <% end %>
</div>


